<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/popcan">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:background="#ff01075f"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shakes"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:textStyle="bold"
        android:textSize="42pt"
        android:textColor="#ffffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Efficient Shaking"
        android:id="@+id/multiply2"
        android:layout_weight="0.29"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addMultiply" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enslave Minions (+1 shake / sec)"
        android:id="@+id/passive1"
        android:layout_weight="0.31"
        android:layout_below="@+id/multiply2"
        android:layout_alignParentLeft="true"
        android:onClick="addPassive"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOP"
        android:id="@+id/shopButton"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/shakes"
        android:layout_alignStart="@+id/shakes"
        android:onClick="openShop"/>

</RelativeLayout>
